<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 카드 배경 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A4A8A"/>
            <corners android:radius="16dp"/>
            <size android:width="200dp" android:height="320dp"/>
        </shape>
    </item>
    
    <!-- 카드 테두리 -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#2E5AA3"/>
            <corners android:radius="16dp"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    
    <!-- JASMIN BLACK 텍스트 영역 (상단) -->
    <item 
        android:top="20dp"
        android:left="20dp"
        android:right="20dp"
        android:bottom="260dp">
        <shape android:shape="rectangle">
            <solid android:color="#D4AF37"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    
    <!-- 칩 영역 (중앙 왼쪽) -->
    <item 
        android:top="120dp"
        android:left="20dp"
        android:right="140dp"
        android:bottom="160dp">
        <shape android:shape="rectangle">
            <solid android:color="#C0C0C0"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    
    <!-- 칩 내부 격자 -->
    <item 
        android:top="125dp"
        android:left="25dp"
        android:right="145dp"
        android:bottom="165dp">
        <shape android:shape="rectangle">
            <solid android:color="#A0A0A0"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    
    <!-- J 로고 (우측 상단) -->
    <item 
        android:top="20dp"
        android:left="160dp"
        android:right="20dp"
        android:bottom="260dp">
        <shape android:shape="oval">
            <solid android:color="#D4AF37"/>
        </shape>
    </item>
    
</layer-list>