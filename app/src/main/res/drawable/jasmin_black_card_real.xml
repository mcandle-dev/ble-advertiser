<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 카드 배경 (진한 파란색) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1E3A8A"/>
            <corners android:radius="12dp"/>
            <size android:width="280dp" android:height="180dp"/>
        </shape>
    </item>
    
    <!-- 카드 테두리 -->
    <item android:inset="2dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#3B82F6"/>
            <corners android:radius="10dp"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    
    <!-- JASMIN BLACK 텍스트 영역 (상단 왼쪽) -->
    <item 
        android:top="20dp"
        android:left="20dp"
        android:right="140dp"
        android:bottom="140dp">
        <shape android:shape="rectangle">
            <solid android:color="#D4AF37"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    
    <!-- J 로고 (우측 상단) -->
    <item 
        android:top="20dp"
        android:left="240dp"
        android:right="20dp"
        android:bottom="140dp">
        <shape android:shape="oval">
            <solid android:color="#D4AF37"/>
        </shape>
    </item>
    
    <!-- 칩 영역 (하단 왼쪽) -->
    <item 
        android:top="100dp"
        android:left="20dp"
        android:right="200dp"
        android:bottom="40dp">
        <shape android:shape="rectangle">
            <solid android:color="#C0C0C0"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    
    <!-- 칩 내부 격자 -->
    <item 
        android:top="105dp"
        android:left="25dp"
        android:right="205dp"
        android:bottom="45dp">
        <shape android:shape="rectangle">
            <solid android:color="#909090"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    
    <!-- 칩 내부 격자 패턴 1 -->
    <item 
        android:top="108dp"
        android:left="32dp"
        android:right="212dp"
        android:bottom="55dp">
        <shape android:shape="rectangle">
            <solid android:color="#A0A0A0"/>
            <size android:width="1dp" android:height="20dp"/>
        </shape>
    </item>
    
    <!-- 칩 내부 격자 패턴 2 -->
    <item 
        android:top="115dp"
        android:left="28dp"
        android:right="208dp"
        android:bottom="48dp">
        <shape android:shape="rectangle">
            <solid android:color="#A0A0A0"/>
            <size android:width="20dp" android:height="1dp"/>
        </shape>
    </item>
    
</layer-list>