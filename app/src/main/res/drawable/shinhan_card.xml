<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 카드 배경 (어두운 회색) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2A2A2A"/>
            <corners android:radius="16dp"/>
            <size android:width="200dp" android:height="320dp"/>
        </shape>
    </item>
    
    <!-- 카드 테두리 -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#444444"/>
            <corners android:radius="16dp"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    
    <!-- ShinhanCard 텍스트 영역 (상단) -->
    <item 
        android:top="20dp"
        android:left="20dp"
        android:right="80dp"
        android:bottom="280dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    
    <!-- 칩 영역 (중앙) -->
    <item 
        android:top="120dp"
        android:left="20dp"
        android:right="140dp"
        android:bottom="160dp">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    
    <!-- 칩 내부 격자 패턴 -->
    <item 
        android:top="125dp"
        android:left="25dp"
        android:right="145dp"
        android:bottom="165dp">
        <shape android:shape="rectangle">
            <solid android:color="#C0C0C0"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    
    <!-- DEEP 텍스트 영역 (오렌지색) -->
    <item 
        android:top="200dp"
        android:left="20dp"
        android:right="80dp"
        android:bottom="220dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF8C00"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    
    <!-- SOUL 텍스트 영역 (오렌지색) -->
    <item 
        android:top="230dp"
        android:left="20dp"
        android:right="80dp"
        android:bottom="250dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF8C00"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    
    <!-- DISCOUNT 버튼 영역 -->
    <item 
        android:top="270dp"
        android:left="20dp"
        android:right="120dp"
        android:bottom="295dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#FF8C00"/>
            <corners android:radius="4dp"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    
</layer-list>