<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- 설정 버튼 (우측 상단) - 톱니바퀴 아이콘 (모든 상태에서 공유) -->
    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_settings_gear"
        android:contentDescription="Settings"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 1. 초기 상태: 카드 및 결제 시작 버튼 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutInitial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ImageView
            android:id="@+id/ivCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/jasmin_black_card_real"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tvScanTimer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/ivPulseAnimation"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/pulse_animation"
            android:visibility="gone"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="@+id/ivCard"
            app:layout_constraintStart_toStartOf="@+id/ivCard"
            app:layout_constraintEnd_toEndOf="@+id/ivCard" />

        <TextView
            android:id="@+id/tvScanTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:visibility="gone"
            android:background="@drawable/circle_timer_background"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            app:layout_constraintTop_toBottomOf="@+id/ivCard"
            app:layout_constraintBottom_toTopOf="@+id/cardNumberContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/cardNumberContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/tvCardNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="**** **** **** ****"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:letterSpacing="0.15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <Button
                android:id="@+id/btnToggle"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="결제 시작"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/blue_button_background" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 2. 결제 상세 정보 화면 (전체 화면 전환) -->
    <ScrollView
        android:id="@+id/layoutPaymentDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="결제 정보를 확인해주세요"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp" />

            <!-- 제품 강조 영역 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F8F9FA"
                android:padding="20dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="구매 상품"
                    android:textSize="13sp"
                    android:textColor="#888888"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나이키알파플라이3"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1A73E8"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사이즈: 265 / 컬러: 블랙 / 수량: 1"
                    android:textSize="14sp"
                    android:textColor="#555555" />

            </LinearLayout>

            <!-- 가격 강조 영역 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="총 상품 금액"
                    android:textSize="15sp"
                    android:textColor="#333333" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="349,000원"
                    android:textSize="16sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="카카오페이 10% 할인"
                    android:textSize="15sp"
                    android:textColor="#E91E63" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-34,900원"
                    android:textSize="16sp"
                    android:textColor="#E91E63"
                    android:textStyle="bold" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE" android:layout_marginBottom="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="40dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="최종 결제 금액"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="314,100원"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#D32F2F" />
            </LinearLayout>

            <!-- 주문 및 매장 정보 (서브) -->
            <TextView
                android:id="@+id/tvDetailOrderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주문번호: 22244400"
                android:textSize="11sp"
                android:textColor="#AAAAAA"
                android:layout_marginBottom="4dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현대백화점 - 압구정본점 (담당: 한아름)"
                android:textSize="11sp"
                android:textColor="#AAAAAA"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/btnDoPay"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="카카오페이 결제하기"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/blue_button_background"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnOtherPay"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="다른 결제수단 결제하기"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/gray_button_background"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/btnCancelPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소하기"
                android:textSize="14sp"
                android:textColor="#888888"
                android:background="?android:attr/selectableItemBackground"
                android:layout_gravity="center" />

        </LinearLayout>
    </ScrollView>

    <!-- 3. 결제 수단 선택 화면 -->
    <LinearLayout
        android:id="@+id/layoutPaymentMethods"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="결제수단 선택"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="48dp" />

        <Button
            android:id="@+id/btnPaySimple"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="카드 간편 결제"
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="@drawable/gray_button_background"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnPayNormal"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="카드 일반 결제"
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="@drawable/gray_button_background"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnPaySamsung"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="SAMSUNG Pay"
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="@drawable/gray_button_background"
            android:layout_marginBottom="48dp" />

        <Button
            android:id="@+id/btnBackToDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="뒤로가기"
            android:textSize="14sp"
            android:textColor="#888888"
            android:background="?android:attr/selectableItemBackground"
            android:layout_gravity="center" />

    </LinearLayout>

    <!-- 4. 결제 완료 화면 (전체 화면 전환) -->
    <LinearLayout
        android:id="@+id/layoutPaymentFinish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone"
        android:background="#E8F5E9">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_check_circle"
            android:layout_marginBottom="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카드결제가 완료되었습니다."
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:gravity="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>