<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.BLEAdvertiser" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 기본 색상 -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_700</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/white</item>
    </style>
    
    <!-- Splash Screen 테마 (깔끔한 흰색 배경에 mCandle 로고) -->
    <style name="Theme.App.Starting" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">#FFFFFF</item>
        <item name="android:navigationBarColor">#FFFFFF</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
</resources>

